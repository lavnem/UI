            <ImageBrush ImageSource="C:\Users\chkpo\source\repos\UI\obrazky\11_770_437108910995190901511980100.8618.jpg"/></Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="30">
            </RowDefinition>
